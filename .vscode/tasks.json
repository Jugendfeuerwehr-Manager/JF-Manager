{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm: dev - frontend",
            "type": "shell",
            "command": "/Users/lukasbisdorf/.nvm/versions/node/v24.9.0/bin/npm",
            "args": ["run", "dev"],
            "group": "build",
            "isBackground": true,
            "problemMatcher": {
                "owner": "vite",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Local:.*$",
                    "endsPattern": "^.*ready in.*$"
                }
            },
            "options": {
                "cwd": "${workspaceFolder}/frontend",
                "shell": {
                    "executable": "/bin/zsh",
                    "args": ["-c"]
                },
                "env": {
                    "PATH": "/Users/lukasbisdorf/.nvm/versions/node/v24.9.0/bin:/usr/local/bin:/usr/bin:/bin",
                    "NODE_ENV": "development"
                }
            }
        }
    ]
}